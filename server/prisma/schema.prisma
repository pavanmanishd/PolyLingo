generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String?
  chats    Chat[]
  Message  Message[]
}

model Chat {
  id       Int       @id @default(autoincrement())
  chatName String
  users    User[]
  messages Message[]
}

model Message {
  id       Int      @id @default(autoincrement())
  chat     Chat     @relation(fields: [chatId], references: [id])
  chatId   Int
  sender   User     @relation(fields: [senderId], references: [id])
  senderId Int
  text     String
  time     DateTime
}
